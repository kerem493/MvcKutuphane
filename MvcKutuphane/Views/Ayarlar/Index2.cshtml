@using MvcKutuphane.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Yetki</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.kullanici</td>
            <td>@item.yetki</td>
            <td>
                <a class="btn btn-info btn-sm" href="/ayarlar/adminguncelle/@item.id">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/ayarlar/adminsil/@item.id">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>
<br />

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form action="/ayarlar/yeniadmin/" method="post">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="kullanici" class="form-control" />
                    <br />
                    <label>Şifre</label>
                    <input type="text" name="sifre" class="form-control" />
                    <br />
                    <label>Yetki</label>
                    <input type="text" name="yetki" class="form-control" />
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>