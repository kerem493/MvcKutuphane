@using MvcKutuphane.Models.Entity
@model List<TblDuyurular>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>Duyuru No</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>İçerik</th>
    </tr>

    @foreach (var prs in Model)
    {

        if (prs.kategori == "Diğer")
        {
            renk = "bg-info text-white";
        }
        if (prs.kategori == "Yeni Kitap")
        {
            renk = "bg-warning text-white";
        }
        if (prs.kategori == "İletişim")
        {
            renk = "bg-success text-white";
        }
        if (prs.kategori == "Kitapları Geciktirmeyin")
        {
            renk = "bg-danger text-white";
        }

        <tr class="@renk">
            <td>@prs.id</td>
            <td>@prs.kategori</td>
            <td>@Convert.ToDateTime(prs.tarih).ToString("dd/MM/yyyy")</td>
            <td><a href="/Duyuru/DuyuruSil/@prs.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Duyuru/DuyuruDetay/@prs.id" class="btn btn-success">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">Yeni Duyuru Ekle</a>

