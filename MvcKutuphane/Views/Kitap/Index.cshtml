@using MvcKutuphane.Models.Entity
@model List<TblKitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px">
        <b>Aranacak kitap adını girin : </b>
        @Html.TextBox("p")
    <input type="submit"  value="Ara" />
    </div>
}



<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>



    @foreach (var k in Model)
    {
        <tr>
            <td>@k.id</td>
            <td>@k.ad</td>
            <td>@k.TblYazar.ad @k.TblYazar.soyad</td>
            <!-- TblYazar.ad çalışmadı Hata verdi. (Ders 23)
                Kod kaynaklı sorun yok, veritabanındaki boş bulunan veri kaynaklı. -->
            <td>@k.TblKategori.ad</td>
            <!-- TblKategori.ad çalışmadı Hata verdi. (Ders23)
                Kod kaynaklı sorun yok, veritabanındaki boş bulunan veri kaynaklı. -->
            <td>@k.basımyil</td>
            <td>@k.yayinevi</td>
            <td>@k.sayfa</td>
            <td>@k.durum</td>
            <td><a href="/Kitap/KitapSil/@k.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle" class="btn btn-primary">Kitap Ekle</a>

