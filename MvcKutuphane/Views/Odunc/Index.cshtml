@using MvcKutuphane.Models.Entity
@model List<TblHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>



<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Uye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
    </tr>



    @foreach (var k in Model)
    {
        <tr>
            <td>@k.id</td>
            <td>@k.TblKitap.ad</td>
            <td>@k.TblUyeler.ad @k.TblUyeler.soyad</td>
            <td>@k.TblPersonel.personel</td>
            <td>@Convert.ToDateTime(k.alistarihi).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.iadetarihi).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/Odunciade/@k.id" class="btn btn-danger" style="background-color:aqua">Kitabı İade Et</a></td>
        </tr>
    }
</table>

