@using MvcKutuphane.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr style="background-color:#ff6a00">
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.id</td>
            <td>@y.ad</td>
            <td>@y.soyad</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz ?')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@y.id" class="btn btn-default" style="background-color:lightcoral; color:white">Yazarın Kitapları</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yazar Ekle</a>